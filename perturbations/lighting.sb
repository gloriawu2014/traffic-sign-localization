#!/bin/bash
#SBATCH --job-name=lighting
#SBATCH --partition=gpu-a5000-q
#SBATCH --gres=gpu:1
#SBATCH --cpus-per-task=4
#SBATCH --mem=16G
#SBATCH --time=4:00:00
#SBATCH --output=lighting.out
#SBATCH --error=lighting.err

#sbatch lighting.sb <iou> <num_test>

LIGHTING_TYPE=${1:-bright}

SEVERITY=${2:-1.0}

IOU=${3:-0.5}

NUM_TEST=${4:-100}

cd ../
source .venv/bin/activate
cd perturbations
python3 lighting.py --lighting_type $LIGHTING_TYPE --severity $SEVERITY --iou $IOU --num_test $NUM_TEST
